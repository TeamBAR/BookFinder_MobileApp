<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="16dp"
    android:background="#FFFFFF">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="center_horizontal">

        <!-- Book Cover Image -->
        <ImageView
            android:id="@+id/bookImage"
            android:layout_width="200dp"
            android:layout_height="300dp"
            android:layout_gravity="center"
            android:scaleType="fitCenter"
            android:contentDescription="Book Cover" />

        <!-- Book Title -->
        <TextView
            android:id="@+id/bookTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:gravity="center"
            android:text="Book Title"
            android:textSize="25sp"
            android:textStyle="bold"
            android:textColor="#000000" />

        <!-- Book Description -->
        <TextView
            android:id="@+id/bookDescription"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:text="Book description goes here..."
            android:textSize="16sp"
            android:textColor="#333333"
            android:lineSpacingExtra="4dp" />

        <!-- Additional Details -->
        <TextView
            android:id="@+id/bookCategory"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:text="Category: Example Category"
            android:textSize="14sp"
            android:textColor="#666666" />

        <TextView
            android:id="@+id/bookAuthor"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Author(s): Example Author"
            android:textSize="14sp"
            android:textColor="#666666" />

        <TextView
            android:id="@+id/bookLanguage"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Language: Example Language"
            android:textSize="14sp"
            android:textColor="#666666" />

        <TextView
            android:id="@+id/bookPublisher"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Publisher: Example Publisher"
            android:textSize="14sp"
            android:textColor="#666666" />

        <TextView
            android:id="@+id/bookPublishedDate"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Published Date: Example Date"
            android:textSize="14sp"
            android:textColor="#666666" />

        <TextView
            android:id="@+id/bookPageCount"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Page Count: Example Page Count"
            android:textSize="14sp"
            android:textColor="#666666" />

    </LinearLayout>
</ScrollView>
